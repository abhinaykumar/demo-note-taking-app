<%= form_with(model: note, class: "form-horizontal") do |form| %>
  <% if note.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row mb-3">
    <%= form.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :description, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.rich_textarea :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row mb-3">
    <%= form.label :notes_category_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.collection_select :notes_category_id, NotesCategory.all, :id, :name, {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
